<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Users</h1>
  </header>

  <div class="well">
    <%= link_to '+ New User', [:new, :admin, :user], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Email</th>
          <th>Password</th>
          <th>Admin</th>
          <th>Created At</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
      <%= render @users %>
      </tbody>
    </table>

  </div>

</section>
