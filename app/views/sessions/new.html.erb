<section class="admin-products-index">
  <header class="page-header">
    <h1>Login</h1>
  </header>

  <%= form_tag '/login' do %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="form-group">
      Email: <%= text_field_tag :email, params[:email], class: 'form-control' %>
    </div>

    <div class="form-group">
      Password: <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>

    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  <% end %>

  <div class="well">
    <%= link_to '+ New User? Click here.', new_user_path, class: 'btn btn-info' %>
  </div>
</section>